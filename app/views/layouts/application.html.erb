<!DOCTYPE html>
<html>
  <head>
    <title>SavingProjection</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="#">Savings Projection</a>
    </div>
    <div class="collapse navbar-collapse" id="myNavbar">
      <ul id="menu" class="nav navbar-nav">
        <%@menu.each do |menu|%>
          <li><%= link_to menu.name, menu.path %></li> 
        <% end %>
      </ul>
      <ul id="userControl" class="nav navbar-nav navbar-right">
        <% if current_user %>
          <li><p class="navbar-text">Logged in as <%= current_user.email %>.</p></li>
          <li><%= link_to "Log Out", logout_path %></li>
        <% else %>
          <li><span class="glyphicon glyphicon-user"> <%= link_to "Sign up", signup_path %></span></li>
          <li><span class="glyphicon glyphicon-log-in"> <%= link_to "Log in", login_path %></span></li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
 
    <%= yield %>
  </body>
</html>
