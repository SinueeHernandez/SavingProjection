<h1><%=t :signUp %></h1>

<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2><%=t :errorHeader %></h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label t :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label t :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label t :confirmation %><br />
    <%= f.password_field :confirmation %>
  </div>
  <div class="actions"><%= f.submit t :send %></div>
<% end %>