<p id="notice"><%= notice %></p>
<div class="container table-responsive">
<h1>Menus</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Level</th>
      <th>Parent</th>
      <th>Icon</th>
      <th>Path</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @menus.each do |menu| %>
      <tr>
        <td><%= menu.id %></td>
        <td><%= menu.name %></td>
        <td><%= menu.level %></td>
        <td><%= menu.parent %></td>
        <td><%= menu.icon %></td>
        <td><%= menu.path %></td>
        <td><%= link_to '<button type="button" class="btn btn-default">Show</button>'.html_safe, menu %></td>
        <td><%= link_to '<button type="button" class="btn btn-default">Edit</button>'.html_safe, edit_menu_path(menu) %></td>
        <td><%= link_to '<button type="button" class="btn btn-default">Destroy</button>'.html_safe, menu, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to '<button type="button" class="btn btn-primary">New Menu</button>'.html_safe, new_menu_path %>
